#!/bin/bash

# Post-installation script that runs the discovery scanner
# This executes after the installer completes

SCANNER_PATH="/usr/local/bin/itam-discovery-scanner.sh"

# Make scanner executable
chmod +x "$SCANNER_PATH"

# Run the scanner in the background with Terminal
osascript <<EOF
tell application "Terminal"
    activate
    do script "sudo '$SCANNER_PATH'; exit"
end tell
EOF

exit 0
